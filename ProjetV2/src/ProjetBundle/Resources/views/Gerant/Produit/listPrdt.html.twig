{% extends"ProjetBundle::LayoutG.html.twig" %}
{% block page %}
    <div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Liste des Produits</h4>

                    </div>
                    <div class="content table-responsive table-full-width">

                        <table class="table table-striped">

                            <tr>
                            <th>id</th>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>description</th>
                            <th>Image</th>
                            <th>Solde nouveau</th>
                            <th>date dajout</th>
                            <th>nom categorie</th>
                            <th>Disponibilite</th>
                            <th>nom boutique</th>
                            <th>Modifier</th>
                            <th>Suppression</th>
                            </tr>
                            <tbody>
                            {% for produit in  pagination %}
                                <tr>
                                    <td>{{ produit.id }}</td>
                                    <td>{{ produit.nom }}</td>
                                    <td>{{ produit.prix }}</td>
                                    <td>{{ produit.description }}</td>
                                    <td><img src="{{ asset('uploads/brochures/' ~ produit.image) }}" style="height: 80px; width: 120px"></img></td>
                                    <td>{{ produit.nouveausolde }}</td>
                                    <td>{{ produit.dateajout|date("m/d/y") }}</td>
                                    <td>{{ produit.idcategorie.nom }}</td>
                                    <td>{{ produit.etatprod }}</td>
                                    <td>{{ produit.idboutique.nomBoutique }}</td>
                                    <td><a href="{{ path('modifier_produit',{'id':produit.id}) }}">Modifier</a></td>
                                    <td><a href="{{ path('supprimer_produit',{'id':produit.id}) }}">Supprimer</a></td>
                                    <td></td>


                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="navigation text-center">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}